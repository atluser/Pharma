		DateFormatModel dtFormat = new DateFormatModel();
		dtFormat.setStyle(DateStyles.DATE_MEDIUM);
		dtFormat.addField(dtAtt);
		dtFormat.setRow(dtRw);
		
		return dtFormat.getText();
		
	} 
	
