			String str03 = dpObjOrder.OrderDate.getDateValue(dtRw);	
			*/
			String str01 = (dpObjOrder.OrderCode.getStringValue(dtRw) != null) ? dpObjOrder.OrderCode.getStringValue(dtRw) : "Data not found!";
			String str02 = (dpObjOrder.OrderStatus.getStringValue(dtRw) != null) ? dpObjOrder.OrderStatus.getStringValue(dtRw) : "Data not found!";
			String str03 = (dpObjOrder.OrderDate.getDateValue(dtRw) != null) ? dpObjOrder.OrderDate.getDateValue(dtRw).toString() : "Data not found!";
			
			if(dpObjOrder.OrderDate.getDateValue(dtRw) != null) {
				str03 = getFormattedDate(dpObjOrder.OrderDate, dtRw);	
			}
			
			tblVwCell.lbl01.setText(str01);
			tblVwCell.lbl02.setText(str02);
			tblVwCell.lbl03.setText(str03);
		}
		
	}
	
	callback stk onCellConfigure(TableView c, CellConfig cell, int group){
		cell.setHeight(Sizing.PREFERRED, 0);
		cell.setWidth(Sizing.PREFERRED, 0);
		cell.setCouldBeSelected(true);
	}
	
	callback stk onCellSize(TableView c, AbsoluteSize sizeInfo, int group, int row){
