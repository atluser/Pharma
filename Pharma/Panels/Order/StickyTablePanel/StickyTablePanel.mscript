	callback src onValueChange (Control c) {
		src.setOnValueChangingPausedDelay(500);
	}
	
	callback src onValueChangingPaused(Control c){
		
		if(sAccountCode != "") {
			setQuery(sAccountCode, src.getText());
		} else {
			setQuery(src.getText());
		}		
		stk.reload();
		if (rsm.getRowCount(0)>0) {
			stk.select(0,0);
			pnlDetail.setRow(rsm.getRow());
		}
		
	}	
	
	/*
	 * Custom methods
	 */
	void setQuery() {
		if(dpRowSetOrder.first()!=null)
			rsm.setRows(dpObjOrder.getOrders());
	} 
	 
	void setQuery(String str) {
		if(dpRowSetOrder.first()!=null)
		{
			if(sAccountCode != "") {
				rsm.setRows(dpObjOrder.getOrderContains(sAccountCode,str));
			} else {
				rsm.setRows(dpObjOrder.getOrderContains(str));
			}
		}
	} 
	
	void setQuery(String str01, String str02) {
		if(dpRowSetOrder.first()!=null)
			rsm.setRows(dpObjOrder.getOrderContains(str01, str02));
		//lbl.setText(" " + dpObjOrder.getOrderContains(str01, str02).getRowSet().getSize() + "Records");
	}
	  
